---
import { Header } from "@components/index";
import "../styles/global.css";
import ClientRouter from "astro/components/ClientRouter.astro";
import { games } from "@data/games";
import { Sidebar } from "./Sidebar";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Adaptamos los datos al formato que espera el Sidebar, por si en el futuro la estructura cambia
const navigationLinks = games
  .map((game) => ({
    title: game.title, // o game.name, ajusta segÃºn tu archivo data/games.ts
    url: game.url,
  }))
  .filter((link) => link.url); // Filtra enlaces sin URL definida
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col bg-black">
    <Sidebar links={navigationLinks} client:load transition:persist />
    <main class="flex-1 flex flex-col relative z-0">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
  }
</style>
